<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <!-- Champ Mot de passe avec affichage et suggestion -->
  <div class="mb-3">
    <%= f.label :password, "Mot de passe" %><br />
    <div class="input-group">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "password" %>
      <div class="input-group-append">
        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
          <i class="fa fa-eye" id="togglePasswordIcon"></i>
        </button>
      </div>
    </div>

    <!-- Bouton pour suggÃ©rer un mot de passe -->
    <div class="mt-2">
      <button type="button" class="btn btn-sm btn-outline-secondary" onclick="generatePassword()">ğŸ”’ SuggÃ©rer un mot de passe sÃ©curisÃ©</button>
      <p id="suggested-password" class="text-muted mt-1" style="font-size: 13px;"></p>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "password_confirmation" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

