<div class="container text-center mt-5">
  <h1 class="mb-4">Découvrez des expériences inoubliables ✈️🌍</h1>
  
  <div class="row">
    <% @experiences.each do |experience| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= experience.title %></h5>
            <p class="card-text"><%= truncate(experience.description, length: 100) %></p>
            <p><strong>Lieu :</strong> <%= experience.location %></p>
            <p><strong>Prix :</strong> <%= number_to_currency(experience.price, unit: "€") %></p>
            <a href="<%= experience_path(experience) %>" class="btn btn-primary">Voir l'expérience</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
