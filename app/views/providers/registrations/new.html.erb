<div class="registration-container">
  <h2>Créer un compte</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "registration-form" }) do |f| %>
    <%= render "providers/shared/error_messages", resource: resource %>

    <!-- Email -->
    <div class="form-group">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
    </div>

    <!-- Mot de passe avec œil -->
    <div class="form-group">
      <%= f.label :password %><br>
      <div class="password-wrapper">
        <%= f.password_field :password, class: "input-field", id: "user_password", autocomplete: "new-password" %>
        <button type="button" class="toggle-password" data-target="user_password">
          👁️
        </button>
      </div>
    </div>

    <!-- Suggestion mot de passe -->
    <div class="form-group">
      <button type="button" class="suggestion-btn" onclick="generatePassword()">🔒 Suggérer un mot de passe sécurisé</button>
      <p id="suggested-password" class="hint"></p>
    </div>

    <!-- Confirmation -->
    <div class="form-group">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
    </div>

    <!-- ✅ Case à cocher pour accepter les CGU -->
    <div class="form-group">
      <label class="checkbox-label">
      <%= check_box_tag :accept_terms, "1", false, id: "accept_terms" %>
        J'accepte les <%= link_to "conditions générales d'utilisation", terms_path, target: "_blank", rel: "noopener", class: "terms-link" %>
      </label>
    </div>

    <!-- Submit -->
    <div class="form-actions">
      <%= f.submit "Créer mon compte", class: "submit-btn" %>
    </div>
  <% end %>

  <div class="form-links">
    <%= render "providers/shared/links" %>
  </div>
</div>
